<link rel="stylesheet" href="/stylesheets/show.css">

<h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{ restaurant.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ restaurant.location }}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ restaurant.phone}}
      </p>

      <p class="mb-5">
        {{ restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100"
        src="{{ restaurant.image }}" alt="{{ restaurant.name }}"
        style="max-width: 600px;"
      >

      {{!-- edit button --}}
      <a class="btn btn-sm btn-outline-secondary" href="/restaurants/{{ restaurant._id }}?_method=PUT">edit</a>
      
      {{!-- delete button --}}
      <button type="submit" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#target-{{ restaurant._id }}">
        delete
      </button>
      
      {{!-- Modal: delete alert --}}
      <div class="modal fade" id="target-{{ restaurant._id }}" tabindex="-1" role="dialog" aria-labelledby="label-{{ restaurant._id }}"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="label-{{ restaurant._id }}">警告</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              您正在嘗試刪除此餐廳資訊：{{ restaurant.name }}
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
              <form action="/restaurants/{{ restaurant._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-primary">
                  確認刪除
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>



    </div>
  </div>
</div>